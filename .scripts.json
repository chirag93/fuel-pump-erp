
{
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run --reporter verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:frontend": "vitest run \"src/__tests__/frontend/**/*.test.{ts,tsx}\" --reporter verbose",
    "test:mobile": "vitest run \"src/__tests__/mobile/**/*.test.{ts,tsx}\" --reporter verbose",
    "test:superadmin": "vitest run \"src/__tests__/superadmin/**/*.test.{ts,tsx}\" --reporter verbose",
    "test:integrations": "vitest run \"src/__tests__/integrations/**/*.test.ts\" --reporter verbose",
    "test:backend": "vitest run \"src/__tests__/backend/**/*.test.ts\" --reporter verbose"
  }
}
